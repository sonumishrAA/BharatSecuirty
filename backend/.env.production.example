# Production Environment Variables
# Copy this to .env.production and fill in actual values

# Database (Render provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server
PORT=3000
NODE_ENV=production

# JWT Secret (Generate a strong random string)
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars

# CORS Origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=https://bs-org-blog.netlify.app,https://bs-net-admin.netlify.app

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
